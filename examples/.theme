~Theme Example

let someColor: #ff0000;

theme light: {
    primary: someColor,
    secondary: #00ff00,
    something: {
        a: #0000ff,
        nested: {
            color: #ff00ff
        },
        ranged: [#ff0000...#00ff00^5, #0000ff, #ff00ff...#0000ff]
    }
};

theme someOtherTheme: {
    primary: #ff0000,
    secondary: #00ff00,
    something: {
        a: #0000ff,
        nested: {
            color: #ff00ff
        },
        ranged: [#ff0000...#0000ff^10]
    }
};